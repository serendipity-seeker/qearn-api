generator client {
    provider = "cargo prisma"
    output   = "../api-server/src/db/prisma.rs"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         Int       @id @default(autoincrement())
    name       String
    email      String
    created_at DateTime  @default(now())
    projects   Project[] // Relation to the Project model
}

model Project {
    id         Int      @id @default(autoincrement())
    title      String
    user_id    Int
    created_at DateTime @default(now())

    // Relation fields
    user User @relation(fields: [user_id], references: [id])
}

model TickInfo {
    id           Int      @id @default(autoincrement())
    tick         BigInt
    duration     BigInt
    epoch        Int
    initial_tick BigInt
    created_at   DateTime @default(now())
}
