generator client {
    provider = "cargo prisma"
    output   = "../api-server/src/db/prisma.rs"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model TickInfo {
    id           Int      @id @default(autoincrement())
    tick         BigInt
    duration     BigInt
    epoch        Int
    initial_tick BigInt
    created_at   DateTime @default(now())
}

model TxInfo {
    id            Int      @id @default(autoincrement())
    source_id     String
    dest_id       String
    amount        BigInt
    tick          BigInt
    input_type    Int
    input_size    Int
    input_hex     String
    signature_hex String
    tx_id         String
    timestamp     String
    money_flew    Boolean
    created_at    DateTime @default(now())
}

model Balance {
    id         Int      @id @default(autoincrement())
    address    String
    balance    BigInt
    tick       BigInt
    created_at DateTime @default(now())

    @@unique([address, tick])
}
