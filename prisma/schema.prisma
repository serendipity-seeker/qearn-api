generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int       @id @default(autoincrement())
    name      String
    email     String
    createdAt DateTime  @default(now())
    projects  Project[] // Relation to the Project model
}

model Project {
    id        Int      @id @default(autoincrement())
    title     String
    userId    Int
    createdAt DateTime @default(now())

    // Relation fields
    user User @relation(fields: [userId], references: [id])
}

model TickInfo {
    id          Int      @id @default(autoincrement())
    tick        BigInt
    duration    BigInt
    epoch       Int
    initialTick BigInt
    createdAt   DateTime @default(now())
}
